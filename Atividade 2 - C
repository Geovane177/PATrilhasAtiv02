using System;

namespace Atividade_2___C
{
	class Program
	{
		public static void Main(string[] args)
		{
			Console.WriteLine("Digite um números: ");
			int numero1 = Convert.ToInt32(Console.ReadLine());
		
			
			int dobro = numero1 / 2;
			
			Console.WriteLine("A metade de "+ numero1 +" é: "+ dobro);
			
		
			Console.Write("Pressione para continuar . . . ");
			Console.ReadKey(true);
		}
	}
}
