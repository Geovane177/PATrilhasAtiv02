using System;

namespace Atividade_2___C
{
	class Program
	{
		public static void Main(string[] args)
		{
			Console.WriteLine("Digite um números: ");
			double numero1 = Convert.ToDouble(Console.ReadLine());
		
			
			double metade = numero1 / 2;
			
			Console.WriteLine("A metade de "+ numero1 +" é: "+ metade);
			
		
			Console.Write("Pressione para continuar . . . ");
			Console.ReadKey(true);
		}
	}
}
